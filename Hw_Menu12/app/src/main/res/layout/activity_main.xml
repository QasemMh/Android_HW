<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:text="Classic Restaurant Menu"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="What kind of food"
        android:textColor="#555"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="#eee"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="191dp"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:onClick="ClickRadio"
                android:text="Chicken 15JD" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:onClick="ClickRadio"
                android:text="Meat 25JD" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:onClick="ClickRadio"
                android:text="pizza 12JD" />


        </RadioGroup>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_background" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="What else in your meal? "
        android:textColor="#555"
        android:textSize="17dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salad 3jd"

        />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="french-Frise 2jd" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="soup 3jd"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tax: 0%" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:text="Pay" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="246dp"
            android:layout_height="138dp"
            android:layout_weight="1"
            android:background="#6B83B6"
            android:hint="Result here "
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15dp" />


    </LinearLayout>


</LinearLayout>